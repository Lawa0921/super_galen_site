---
/**
 * BaseLayout.astro
 * 主佈局組件 - 包含 HTML 結構、head 標籤、以及全局樣式
 */
import '@styles/main.scss';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const {
  title,
  description = "SuperGalen's Dungeon - RPG 風格技術部落格",
  lang = 'zh-TW'
} = Astro.props;

// 語言對應的 HTML lang 屬性
const htmlLang = {
  'zh-TW': 'zh-Hant-TW',
  'zh-CN': 'zh-Hans-CN',
  'en': 'en',
  'ja': 'ja',
  'ko': 'ko',
}[lang] || 'zh-Hant-TW';
---

<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Font Awesome (非同步載入) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      />
    </noscript>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
