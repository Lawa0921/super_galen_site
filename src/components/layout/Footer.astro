---
/**
 * Footer.astro
 * 網站頁尾 - 包含社交連結和版權資訊
 */
import { type Language, useTranslations } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const { all: trans } = useTranslations(lang);

// 社交連結配置
const socialLinks = [
  { id: 'github', href: 'https://github.com/Lawa0921', icon: 'fab fa-github', label: 'GitHub' },
  { id: 'facebook', href: 'https://www.facebook.com/profile.php?id=61558667306294', icon: 'fab fa-facebook', label: 'Facebook' },
  { id: 'threads', href: 'https://www.threads.com/@supergalen0921', icon: 'fab fa-threads', label: 'Threads' },
  { id: 'discord', href: 'https://discord.gg/QRyTagwSSF', icon: 'fab fa-discord', label: 'Discord' },
  { id: 'email', href: 'mailto:bag571ivy3470@gmail.com', icon: 'fas fa-envelope', label: 'Email' },
];

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="social-links">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target={link.id === 'email' ? undefined : '_blank'}
          rel={link.id === 'email' ? undefined : 'noopener'}
          class="social-link"
        >
          <i class={link.icon}></i>
          <span>{link.label}</span>
        </a>
      ))}
    </div>

    <p class="copyright">
      &copy; {currentYear} SuperGalen's Dungeon. All rights reserved.
    </p>
  </div>
</footer>

