---
/**
 * AchievementsPanel.astro
 * 成就系統面板 - 顯示已解鎖的成就
 */
import { type Language, useTranslations } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const { all: trans } = useTranslations(lang);

// 成就資料（從翻譯檔案取得）
const achievementItems = trans.achievements?.items || {};
const achievements = Object.entries(achievementItems).map(([key, value]: [string, any]) => ({
  id: key,
  icon: value.icon || '/assets/images/achievements/default.webp',
  title: value.title || key,
  description: value.description || '',
  date: value.date || '',
  unlocked: true, // 這裡可以根據遊戲狀態判斷
}));
---

<div class="achievements-panel">
  <h3 class="panel-title">
    <i class="fas fa-trophy"></i>
    {trans.achievements?.title || '成就系統'}
  </h3>

  <div class="achievements-stats">
    <span class="stat">
      <i class="fas fa-unlock"></i>
      {achievements.length} / {achievements.length}
    </span>
    <span class="stat-label">{trans.achievements?.completed || '已完成'}</span>
  </div>

  <div class="achievements-grid">
    {achievements.map((achievement) => (
      <div class:list={['achievement-card', { unlocked: achievement.unlocked }]}>
        <div class="achievement-icon">
          <img
            src={achievement.icon.startsWith('/') ? achievement.icon : `/${achievement.icon}`}
            alt={achievement.title}
            loading="lazy"
            onerror="this.style.display='none'"
          />
        </div>
        <div class="achievement-info">
          <h4 class="achievement-title">{achievement.title}</h4>
          <p class="achievement-description">{achievement.description}</p>
          {achievement.date && (
            <time class="achievement-date">
              <i class="fas fa-calendar-check"></i>
              {achievement.date}
            </time>
          )}
        </div>
        {achievement.unlocked && (
          <div class="unlocked-badge">
            <i class="fas fa-check-circle"></i>
          </div>
        )}
      </div>
    ))}
  </div>
</div>

<style>
  .achievements-panel {
    padding: 1rem;
  }

  .panel-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ffd700;
    font-size: 1.25rem;
    margin: 0 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 215, 0, 0.3);
  }

  .achievements-stats {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    padding: 0.75rem;
    background: rgba(255, 215, 0, 0.1);
    border-radius: 8px;
  }

  .stat {
    font-size: 1.25rem;
    font-weight: bold;
    color: #ffd700;
  }

  .stat i {
    margin-right: 0.4rem;
  }

  .stat-label {
    color: #888;
    font-size: 0.9rem;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }

  .achievement-card {
    position: relative;
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .achievement-card.unlocked {
    border-color: rgba(255, 215, 0, 0.5);
  }

  .achievement-card:hover {
    transform: translateY(-2px);
    border-color: #ffd700;
    background: rgba(255, 215, 0, 0.05);
  }

  .achievement-icon {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .achievement-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .achievement-info {
    flex: 1;
    min-width: 0;
  }

  .achievement-title {
    margin: 0 0 0.25rem;
    font-size: 1rem;
    color: #ffd700;
  }

  .achievement-description {
    margin: 0;
    font-size: 0.85rem;
    color: #b0b0b0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .achievement-date {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.75rem;
    color: #888;
  }

  .achievement-date i {
    margin-right: 0.3rem;
  }

  .unlocked-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    color: #50c878;
    font-size: 1.25rem;
  }

  /* 動畫效果 */
  @keyframes achievementUnlock {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .achievement-card.unlocked {
    animation: achievementUnlock 0.5s ease-out;
  }

  @media (max-width: 768px) {
    .achievements-grid {
      grid-template-columns: 1fr;
    }

    .achievement-icon {
      width: 48px;
      height: 48px;
    }
  }
</style>
