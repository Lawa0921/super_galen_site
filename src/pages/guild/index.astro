    border-color: #1a1f3a;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }

  [data-theme="light"] .guild-member-card .name {
    color: #1a1f3a;
  }

  [data-theme="light"] .guild-member-card .avatar {
    border-color: #1a1f3a;
  }

  [data-theme="light"] .guild-member-card .tag {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.1);
    color: #495057;
  }

  [data-theme="light"] .shuffle-btn {
    background: rgba(0, 0, 0, 0.05);
    color: #1a1f3a;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .guild-title {
      font-size: 1.5rem;
    }

    .members-display {
      gap: 1rem;
    }

    .guild-member-card {
      width: 160px;
      padding: 1rem;
    }
  }
</style>

<script>
  // 公會頁面 JavaScript
  // 資料來自 YAML 檔案（由伺服器端 Astro 讀取），是受信任的資料來源
  document.addEventListener('DOMContentLoaded', () => {
    const members = (window as any).guildMembers || [];
    const basePath = (window as any).guildBasePath || '';
    const display = document.getElementById('membersDisplay');
    const shuffleBtn = document.getElementById('shuffleBtn');
    const cardStack = document.getElementById('cardStack');

    if (!display || !shuffleBtn || !cardStack) return;

    // Fisher-Yates 洗牌演算法
    function shuffle<T>(array: T[]): T[] {
      const arr = [...array];
      for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
      return arr;
    }

    // 渲染成員卡片（使用 DOM API 避免 XSS）
    function renderMembers(memberList: any[]) {
      display.textContent = '';

      const selectedMembers = memberList.slice(0, 10);

      selectedMembers.forEach((member) => {
        const card = document.createElement('a');
        card.className = 'guild-member-card';
        const memberId = member.page?.replace('/guild/', '').replace('.html', '') || member.id;
        card.href = `${basePath}/guild/${memberId}`;

        // Avatar
        const avatarDiv = document.createElement('div');
        avatarDiv.className = 'avatar';
        const avatarImg = document.createElement('img');
        avatarImg.src = member.avatar;
        avatarImg.alt = member.name;
        avatarImg.loading = 'lazy';
        avatarDiv.appendChild(avatarImg);
        card.appendChild(avatarDiv);

        // Name
        const nameDiv = document.createElement('div');
        nameDiv.className = 'name';
        nameDiv.textContent = member.name;
        card.appendChild(nameDiv);

        // Tags
        const tagsDiv = document.createElement('div');
        tagsDiv.className = 'tags';
        (member.tags || []).slice(0, 3).forEach((tag: any) => {
          const tagSpan = document.createElement('span');
          tagSpan.className = 'tag';
          tagSpan.textContent = tag.label || tag;
          tagsDiv.appendChild(tagSpan);
        });
        card.appendChild(tagsDiv);

        display.appendChild(card);

        // 觸發滑入動畫
        requestAnimationFrame(() => {
          card.classList.add('slide-in');
        });
      });
    }

    // 卡片爆散動畫
    function explodeCards() {
      const stackCards = cardStack.querySelectorAll('.stack-card');
      stackCards.forEach((card, i) => {
        const el = card as HTMLElement;
        const angle = (i / stackCards.length) * 360;
        const distance = 150 + Math.random() * 100;
        const x = Math.cos(angle * Math.PI / 180) * distance;
        const y = Math.sin(angle * Math.PI / 180) * distance;
        const rotation = (Math.random() - 0.5) * 720;

        el.style.transition = 'transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.4s ease';
        el.style.transform = `translate(${x}px, ${y}px) rotate(${rotation}deg) scale(0)`;
        el.style.opacity = '0';
      });

      // 重置卡片
      setTimeout(() => {
        stackCards.forEach((card) => {
          const el = card as HTMLElement;
          el.style.transition = 'none';
          el.style.transform = '';
          el.style.opacity = '';
        });
        setTimeout(() => {
          stackCards.forEach((card) => {
            (card as HTMLElement).style.transition = '';
          });
        }, 50);
      }, 800);
    }

    // 洗牌並重新渲染
    function shuffleAndRender() {
      explodeCards();

      // 清除現有卡片
      const existingCards = display.querySelectorAll('.guild-member-card');
      existingCards.forEach(card => {
        card.classList.remove('slide-in');
        (card as HTMLElement).style.opacity = '0';
      });

      setTimeout(() => {
        const shuffled = shuffle(members);
        renderMembers(shuffled);
      }, 400);
    }

    // 初始渲染
    renderMembers(shuffle(members));

    // 洗牌按鈕事件
    shuffleBtn.addEventListener('click', shuffleAndRender);
  });
</script>
